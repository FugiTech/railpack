{
 "deploy": {
  "inputs": [
   {
    "image": "ghcr.io/railwayapp/railpack-runtime-base:latest"
   },
   {
    "include": [
     "."
    ],
    "step": "defaultsToUsing"
   },
   {
    "include": [
     "."
    ],
    "step": "doesNotUseSecrets"
   },
   {
    "include": [
     "."
    ],
    "step": "usesSecrets"
   }
  ],
  "startCommand": "./run.sh"
 },
 "secrets": [
  "MY_SECRET",
  "MY_OTHER_SECRET",
  "HELLO_WORLD"
 ],
 "steps": [
  {
   "inputs": [
    {
     "image": "ghcr.io/railwayapp/railpack-builder-base:latest"
    }
   ],
   "name": "packages:mise",
   "secrets": [
    "*"
   ]
  },
  {
   "commands": [
    {
     "dest": ".",
     "src": "."
    },
    {
     "cmd": "sh -c './run.sh'",
     "customName": "./run.sh"
    }
   ],
   "inputs": [
    {
     "step": "packages:mise"
    }
   ],
   "name": "defaultsToUsing",
   "secrets": [
    "*"
   ],
   "variables": {
    "NOT_SECRET": "not secret"
   }
  },
  {
   "commands": [
    {
     "dest": ".",
     "src": "."
    },
    {
     "cmd": "sh -c './run.sh true'",
     "customName": "./run.sh true"
    }
   ],
   "inputs": [
    {
     "step": "packages:mise"
    }
   ],
   "name": "doesNotUseSecrets"
  },
  {
   "commands": [
    {
     "dest": ".",
     "src": "."
    },
    {
     "cmd": "sh -c './run.sh'",
     "customName": "./run.sh"
    }
   ],
   "inputs": [
    {
     "step": "packages:mise"
    }
   ],
   "name": "usesSecrets",
   "secrets": [
    "MY_SECRET",
    "MY_OTHER_SECRET"
   ],
   "variables": {
    "NOT_SECRET": "not secret"
   }
  }
 ]
}