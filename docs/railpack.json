{
  "$schema": "..//test/schema.json",
  "packages": {
    "node": "22",
    "caddy": "latest"
  },
  "steps": {
    "build": {
      "commands": [{ "src": ".", "dest": "" }, "astro build"]
    },
    "fmt": {
      "dependsOn": ["build"],
      "commands": [
        { "src": "Caddyfile", "dest": "Caddyfile" },
        "caddy fmt --overwrite Caddyfile"
      ]
    }
  },
  "start": {
    "cmd": "exec caddy run --config Caddyfile --adapter caddyfile 2>&1"
  }
}
