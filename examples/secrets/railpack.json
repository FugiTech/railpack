{
  "$schema": "../../test/schema.json",

  "secrets": ["MY_SECRET", "MY_OTHER_SECRET", "HELLO_WORLD"],

  "steps": {
    "usesSecrets": {
      "commands": [{ "src": ".", "dest": "." }, "./run.sh"],
      "useSecrets": true,
      "outputs": []
    },

    "defaultsToUsing": {
      "commands": [{ "src": ".", "dest": "." }, "./run.sh"],
      "outputs": []
    },

    "doesNotUseSecrets": {
      "commands": [{ "src": ".", "dest": "." }, "./run.sh true"],
      "useSecrets": false,
      "outputs": []
    }
  },

  "start": {
    "cmd": "./run.sh"
  }
}
