{
  "$schema": "../../test/schema.json",

  "secrets": ["MY_SECRET", "MY_OTHER_SECRET", "HELLO_WORLD"],

  "steps": {
    "usesSecrets": {
      "commands": [
        { "name": "NOT_SECRET", "value": "not secret" },
        { "src": ".", "dest": "." },
        "./run.sh"
      ],
      "useSecrets": true
    },

    "defaultsToUsing": {
      "commands": [
        { "name": "NOT_SECRET", "value": "not secret" },
        { "src": ".", "dest": "." },
        "./run.sh"
      ]
    },

    "doesNotUseSecrets": {
      "commands": [{ "src": ".", "dest": "." }, "./run.sh true"],
      "useSecrets": false
    }
  },

  "start": {
    "cmd": "./run.sh"
  }
}
