{
  "$schema": "../../test/schema.json",

  "secrets": ["MY_SECRET", "MY_OTHER_SECRET", "HELLO_WORLD"],

  "steps": {
    "usesSecrets": {
      "commands": [{ "src": ".", "dest": "." }, "./run.sh"],
      "secrets": ["MY_SECRET", "MY_OTHER_SECRET"],
      "variables": {
        "NOT_SECRET": "not secret"
      },
      "outputs": ["/app"]
    },

    "defaultsToUsing": {
      "commands": [{ "src": ".", "dest": "." }, "./run.sh"],
      "variables": {
        "NOT_SECRET": "not secret"
      },
      "outputs": ["/app"]
    },

    "doesNotUseSecrets": {
      "commands": [{ "src": ".", "dest": "." }, "./run.sh true"],
      "secrets": [],
      "outputs": ["/app"]
    }
  },

  "start": {
    "cmd": "./run.sh"
  }
}
